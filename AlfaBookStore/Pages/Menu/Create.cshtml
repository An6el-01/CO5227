@page
@model AlfaBookStore.Pages.Menu.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Books</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Books.Title" class="control-label"></label>
                <input asp-for="Books.Title" class="form-control" />
                <span asp-validation-for="Books.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.Author" class="control-label"></label>
                <input asp-for="Books.Author" class="form-control" />
                <span asp-validation-for="Books.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.Price" class="control-label"></label>
                <input asp-for="Books.Price" class="form-control" />
                <span asp-validation-for="Books.Price" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label asp-for="Books.Image" class="control-label">Image Upload</label>

                <input type="file" id="file"
                    name="file1"
                    multiple="multiple" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
